{
  "name": "groceries",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --silent",
    "dev-sql": "docker compose --env-file .env.dev up",
    "test-sql": "docker compose -f docker-compose.test.yml --env-file .env.test up",
    "dev": "NODE_ENV=dev nodemon src/index.ts",
    "test-server": "NODE_ENV=test ts-node src/scripts/seed-test-data.ts && NODE_ENV=test nodemon src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=prod node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "migrate": "node-pg-migrate -f .node-pg-migraterc.json",
    "migrate:up": "node-pg-migrate up -f .node-pg-migraterc.json",
    "migrate:down": "node-pg-migrate down -f .node-pg-migraterc.json",
    "migrate:create": "node-pg-migrate create -f .node-pg-migraterc.json",
    "migrate:dev": "export $(cat .env.dev | grep -v '^#' | xargs) && node-pg-migrate up -f .node-pg-migraterc.json",
    "migrate:test": "export $(cat .env.test | grep -v '^#' | xargs) && node-pg-migrate up -f .node-pg-migraterc.json",
    "migrate:prod": "export $(cat .env.prod | grep -v '^#' | xargs) && node-pg-migrate up -f .node-pg-migraterc.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@groceries/shared_types": "github:HorttanainenSami/groceries-shared-types#master",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.9",
    "prettier": "^3.7.4",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.32.1",
    "zod-fixture": "^2.5.2"
  }
}
